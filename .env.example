# Oracle Chatbot System Environment Configuration

# Service Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
VLLM_PORT=8001
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
CHROMADB_PORT=8002

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here
NEO4J_HEAP_SIZE=512m
NEO4J_PAGECACHE_SIZE=256m

# Model Serving Configuration
CUDA_ENABLED=false
VLLM_MODEL=microsoft/DialoGPT-medium
VLLM_API_KEY=oracle-key  # Internal API key for vLLM service authentication
CUDA_VISIBLE_DEVICES=0
OLLAMA_BASE_URL=http://localhost:11434

# External API Keys (for fallback models)
GOOGLE_API_KEY=your_google_api_key_here

# Application Configuration
NODE_ENV=production
LOG_LEVEL=INFO

# Development Overrides (uncomment for development)
# NODE_ENV=development
# LOG_LEVEL=DEBUG